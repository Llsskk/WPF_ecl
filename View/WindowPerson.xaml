<Window x:Class="ecl.View.WindowPerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ecl.View"
        mc:Ignorable="d"
        Title="Клиент" Height="280" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,34,0,25">
            <TextBlock Width="100" Text="Шифр клиента"/>
            <TextBox Width="120" x:Name="tbShifer" />
            <TextBlock Width="90" Text="ИНН клиента"/>
            <TextBox Width="120" x:Name="tbInn" />
            <TextBlock Width="80" Text="Тип клиента"/>
            <TextBox Width="250" x:Name="tbType" />
            <TextBlock Width="140" Text="Дата регистрации клиента"/>
            <DatePicker Width="120" x:Name="tbData" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="45">
                <Button x:Name="btOK" Content="Подтвердить " Margin="5" Height="20" Click="btOK_Click" IsDefault="True" />
                <Button x:Name="btConcel" Content="Отменить" Margin="5" Height="20" IsCancel="True" Click="btConcel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

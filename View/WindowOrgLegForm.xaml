<Window x:Class="ecl.View.WindowOrgLegForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ecl.View"
        mc:Ignorable="d"
        Title="Организационно-правовая форма" Height="200" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Height="150">
           
            <TextBlock Width="170" Text="Полное наименование ОПФ"/>
            <TextBox x:Name="tbNameFullForm" Width="250"/>
            <TextBlock Width="170" Text=""/>
            <TextBlock Width="170" Text="Краткое наименование ОПФ"/>
            <TextBox x:Name="tbNameShortForm" Width="250"/>


            <StackPanel Orientation="Horizontal" Height="35" HorizontalAlignment="Center">
                <Button x:Name="btOK" Content="Подтвердить " Margin="5" Height="20" Click="btOK_Click" IsDefault="True" />
                <Button x:Name="btConcel" Content="Отменить" Margin="5" Height="20" IsCancel="True" Click="btConcel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
